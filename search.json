---
layout: null
---
[
  {% for page in site.pages %}
    {% if page.layout == 'post' and page.title and page.permalink %}
    {
      "title": {{ page.title | jsonify }},
      "url": {{ page.permalink | jsonify }},
      "content": {{ page.content | strip_html | normalize_whitespace | jsonify }},
      "excerpt": {{ page.content | strip_html | truncatewords: 50 | normalize_whitespace | jsonify }},
      "tags": {{ page.tags | default: empty | jsonify }},
      "image": {{ page.thumbnail | default: page.image | default: "" | jsonify }},
      "console": {{ page.console | default: "" | jsonify }}
    }{% unless forloop.last %},{% endunless %}
    {% endif %}
  {% endfor %}
]
